<div class="ui middle aligned center aligned grid">
  <div class="column column">
    <div class="ui stacked segment">
      <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class:"ui form"}) do |f| %>

        <% if resource.errors.presence %>
          <div class="ui negative message">
            <div class="header">
              <%= devise_error_messages! %>
            </div>
          </div>
        <% end %>

        <div class="field">
          <label>名前</label>
          <%= f.text_field :name, autofocus: true, placeholder:"名前" %>
        </div>

        <div class="field">
          <label>E-mail</label>
          <%= f.email_field :email,autocomplete: "email", placeholder:"Email" %>
        </div>

        <div class="field">
          <label>Password</label>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <label>Password確認用</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <label>性別</label>
          <div class="ui selection dropdown">
            <%= f.select :sex, [["Male","男"],["Female","女"]], type:"hidden" %>
            <i class="dropdown icon"></i>
            <div class="default text">Gender</div>
            <div class="menu">
              <div class="item" data-value="男">Male</div>
              <div class="item" data-value="女">Female</div>
            </div>
          </div>
        </div>

        <div class="field">
          <label>電話番号</label>
          <%= f.text_field :number, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <label>住所</label>
          <%= f.text_field :addresses, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up",:class=>"ui fluid large secandary submit button"  %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<script>
    $('.ui.selection.dropdown')
        .dropdown();
</script>
