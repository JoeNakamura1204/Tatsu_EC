<div class="ui middle aligned center aligned grid">
  <div class="column column">
    <div class="ui large form">
      <div class="ui stacked segment">
        <h2>Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:"ui form"})  do |f| %>
          <div class="field">
            <label>Email</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"" %>
          </div>
          <div class="field">
            <label>Password</label>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <div class="ui checkbox">
                <%= f.check_box :remember_me,:class=>"hidden" %>
                <label>I agree to the Terms and Conditions</label>
              </div>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in",:class=>"ui fluid large teal submit button" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<script>
    $('.ui.checkbox')
        .checkbox()
    ;
</script>

